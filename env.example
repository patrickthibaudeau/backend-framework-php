# Application Configuration
APP_NAME="DevFramework Application"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC
APP_KEY=

# Database Configuration - Docker MySQL
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=devframework
DB_USERNAME=devframework
DB_PASSWORD=devframework
DB_PREFIX=

# Alternative PostgreSQL Configuration - Docker
# DB_CONNECTION=pgsql
# DB_HOST=postgres
# DB_PORT=5432
# DB_DATABASE=devframework
# DB_USERNAME=devframework
# DB_PASSWORD=devframework
# DB_PREFIX=

# Security
ENCRYPTION_KEY=
HASH_ALGO=bcrypt

# Cache Configuration - Docker Redis
CACHE_DRIVER=redis
CACHE_HOST=redis
CACHE_PORT=6379
CACHE_PREFIX=devframework_cache

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

# Mustache cache
MUSTACHE_DISABLE_CACHE=true
MUSTACHE_SUPPRESS_DEPRECATIONS=true

# Mail Configuration
MAIL_DRIVER=log              # log | mail | smtp
MAIL_FROM_ADDRESS="no-reply@example.test"
MAIL_FROM_NAME="DevFramework"
# Optional reply-to
# MAIL_REPLY_TO_ADDRESS=support@example.test
# MAIL_REPLY_TO_NAME="Support Team"
# Log driver path override (default storage/logs/mail.log)
# MAIL_LOG_PATH=/var/www/storage/logs/mail.log
