# Application Configuration
APP_NAME="DevFramework Application"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC
APP_KEY=

# Database Configuration - Docker MySQL
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=devframework
DB_USERNAME=devframework
DB_PASSWORD=devframework
DB_PREFIX=

# Alternative PostgreSQL Configuration - Docker
# DB_CONNECTION=pgsql
# DB_HOST=postgres
# DB_PORT=5432
# DB_DATABASE=devframework
# DB_USERNAME=devframework
# DB_PASSWORD=devframework
# DB_PREFIX=

# Security
ENCRYPTION_KEY=
HASH_ALGO=bcrypt

# Cache Configuration - Docker Redis
CACHE_DRIVER=redis
CACHE_HOST=redis
CACHE_PORT=6379
CACHE_PREFIX=devframework_cache

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

# Mustache cache
MUSTACHE_DISABLE_CACHE=true
MUSTACHE_SUPPRESS_DEPRECATIONS=true
