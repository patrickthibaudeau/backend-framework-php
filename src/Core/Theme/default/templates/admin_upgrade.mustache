<div class="space-y-6">
  <div class="bg-white p-6 rounded shadow">
    <h1 class="text-2xl font-bold mb-4 flex items-center gap-3">Upgrade Utility
      <span class="text-xs font-normal text-slate-500">Generated at {{generated_at}}</span>
    </h1>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
      <div class="bg-slate-50 rounded p-3">
        <div class="text-xs uppercase tracking-wide text-slate-500">Successful</div>
        <div class="text-xl font-semibold text-green-600">{{summary.success}}</div>
      </div>
      <div class="bg-slate-50 rounded p-3">
        <div class="text-xs uppercase tracking-wide text-slate-500">Errors</div>
        <div class="text-xl font-semibold text-red-600">{{summary.errors}}</div>
      </div>
      <div class="bg-slate-50 rounded p-3">
        <div class="text-xs uppercase tracking-wide text-slate-500">Skipped</div>
        <div class="text-xl font-semibold text-slate-600">{{summary.skipped}}</div>
      </div>
      <div class="bg-slate-50 rounded p-3">
        <div class="text-xs uppercase tracking-wide text-slate-500">Total Items</div>
        <div class="text-xl font-semibold text-indigo-600">{{summary.total}}</div>
      </div>
    </div>
  </div>

  <div class="bg-white rounded shadow overflow-hidden">
    <table class="min-w-full text-sm">
      <thead class="bg-slate-100 text-slate-600 text-xs uppercase">
        <tr>
          <th class="px-3 py-2 text-left">Component</th>
            <th class="px-3 py-2 text-left">Type</th>
          <th class="px-3 py-2 text-left">From → To</th>
          <th class="px-3 py-2 text-left">Status</th>
          <th class="px-3 py-2 text-left">Message</th>
        </tr>
      </thead>
      <tbody>
        {{#rows}}
        <tr class="border-t">
          <td class="px-3 py-2 font-medium text-slate-800">{{component}}</td>
          <td class="px-3 py-2 text-slate-500">{{type}}</td>
          <td class="px-3 py-2 text-slate-700">{{#from_version}}{{from_version}}{{/from_version}}{{^from_version}}—{{/from_version}} → {{#to_version}}{{to_version}}{{/to_version}}{{^to_version}}—{{/to_version}}</td>
          <td class="px-3 py-2"><span class="inline-block text-xs px-2 py-1 rounded {{status_class}}">{{status}}</span></td>
          <td class="px-3 py-2 text-slate-600">{{message}}</td>
        </tr>
        {{/rows}}
        {{^rows}}
        <tr><td colspan="5" class="px-3 py-6 text-center text-slate-500">No upgrade operations performed.</td></tr>
        {{/rows}}
      </tbody>
    </table>
  </div>
  <div class="text-xs text-slate-500">Page auto-generated by upgrade utility.</div>
</div>

