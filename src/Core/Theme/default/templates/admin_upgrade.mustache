<main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8" aria-labelledby="upgradeTitle">
  <div class="flex items-start justify-between flex-wrap gap-4 mb-6">
    <div>
      <h1 id="upgradeTitle" class="text-2xl font-semibold text-slate-800 mb-1">Upgrade Utility</h1>
      <p class="text-sm text-slate-500">Generated at {{generated_at}}</p>
    </div>
    <div class="flex items-center gap-3">
      <a href="{{home_link}}" class="inline-flex items-center gap-2 rounded-md border border-slate-300 bg-white px-3 py-2 text-sm font-medium text-slate-700 shadow-sm hover:bg-slate-50 focus-ring" aria-label="Back to Admin Dashboard">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/></svg>
        Back to Admin
      </a>
      <a href="upgrade.php" class="inline-flex items-center gap-2 rounded-md bg-brand-600 px-3 py-2 text-sm font-medium text-white shadow-sm hover:bg-brand-700 focus-ring" aria-label="Run Upgrade Again">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M4 4v6h6M20 20v-6h-6"/><path stroke-linecap="round" stroke-linejoin="round" d="M20 8a8 8 0 00-15.5-2M4 16a8 8 0 0015.5 2"/></svg>
        Run Again
      </a>
    </div>
  </div>

  <section aria-labelledby="summaryHeading" class="mb-8">
    <h2 id="summaryHeading" class="sr-only">Summary</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4">
      <div class="rounded-lg border border-slate-200 bg-white p-4 flex flex-col gap-2">
        <span class="text-xs uppercase tracking-wide text-slate-500">Successful</span>
        <span class="text-lg font-semibold text-green-600">{{summary.success}}</span>
      </div>
      <div class="rounded-lg border border-slate-200 bg-white p-4 flex flex-col gap-2">
        <span class="text-xs uppercase tracking-wide text-slate-500">Skipped</span>
        <span class="text-lg font-semibold text-slate-500">{{summary.skipped}}</span>
      </div>
      <div class="rounded-lg border border-slate-200 bg-white p-4 flex flex-col gap-2">
        <span class="text-xs uppercase tracking-wide text-slate-500">Errors</span>
        <span class="text-lg font-semibold text-red-600">{{summary.errors}}</span>
      </div>
      <div class="rounded-lg border border-slate-200 bg-white p-4 flex flex-col gap-2">
        <span class="text-xs uppercase tracking-wide text-slate-500">Total Items</span>
        <span class="text-lg font-semibold text-slate-700">{{summary.total}}</span>
      </div>
    </div>
  </section>

  <section aria-labelledby="detailsHeading" class="mb-10">
    <h2 id="detailsHeading" class="text-lg font-semibold text-slate-800 mb-3">Details</h2>
    <div class="overflow-x-auto rounded-lg border border-slate-200 bg-white shadow-sm">
      <table class="min-w-full text-sm">
        <thead class="bg-slate-50 text-slate-600 text-xs uppercase tracking-wide">
          <tr>
            <th scope="col" class="px-4 py-2 text-left font-medium">Component</th>
            <th scope="col" class="px-4 py-2 text-left font-medium">Type</th>
            <th scope="col" class="px-4 py-2 text-left font-medium">Status</th>
            <th scope="col" class="px-4 py-2 text-left font-medium">From</th>
            <th scope="col" class="px-4 py-2 text-left font-medium">To</th>
            <th scope="col" class="px-4 py-2 text-left font-medium">Message</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
          {{#rows}}
          <tr class="hover:bg-slate-50/50">
            <td class="px-4 py-2 font-mono text-xs text-slate-700">{{component}}</td>
            <td class="px-4 py-2 text-slate-600">{{type}}</td>
            <td class="px-4 py-2"><span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium {{status_class}}">{{status}}</span></td>
            <td class="px-4 py-2 text-slate-500">{{from_version}}</td>
            <td class="px-4 py-2 text-slate-500">{{to_version}}</td>
            <td class="px-4 py-2 text-slate-600 max-w-md">{{message}}</td>
          </tr>
          {{/rows}}
          {{^rows}}
          <tr>
            <td colspan="6" class="px-4 py-8 text-center text-slate-500">No upgrade activity recorded.</td>
          </tr>
          {{/rows}}
        </tbody>
      </table>
    </div>
  </section>

  {{#summary.errors}}
  <div class="mb-8 rounded-md border border-red-200 bg-red-50 p-4 text-sm text-red-700">
    One or more items failed. Review error rows above and consult logs for details.
  </div>
  {{/summary.errors}}

  <div class="flex flex-wrap gap-4">
    <a href="{{home_link}}" class="inline-flex items-center gap-2 rounded-md border border-slate-300 bg-white px-4 py-2 text-sm font-medium text-slate-700 shadow-sm hover:bg-slate-50 focus-ring">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/></svg>
      Back to Admin
    </a>
    <a href="upgrade.php" class="inline-flex items-center gap-2 rounded-md bg-brand-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-brand-700 focus-ring">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M4 4v6h6M20 20v-6h-6"/><path stroke-linecap="round" stroke-linejoin="round" d="M20 8a8 8 0 00-15.5-2M4 16a8 8 0 0015.5 2"/></svg>
      Run Again
    </a>
  </div>
</main>

