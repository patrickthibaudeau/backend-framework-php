<div class="space-y-6">
  <div class="bg-white p-6 rounded shadow">
    <h1 class="text-2xl font-bold mb-4 flex items-center gap-3">{{#str}}upgrade_utility_title, theme_default{{/str}}
      <span class="text-xs font-normal text-slate-500">{{#str}}upgrade_generated_at, theme_default{{/str}} {{generated_at}}</span>
    </h1>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
      <div class="bg-slate-50 rounded p-3">
        <div class="text-xs uppercase tracking-wide text-slate-500">{{#str}}upgrade_successful_label, theme_default{{/str}}</div>
        <div class="text-xl font-semibold text-green-600">{{summary.success}}</div>
      </div>
      <div class="bg-slate-50 rounded p-3">
        <div class="text-xs uppercase tracking-wide text-slate-500">{{#str}}upgrade_errors_label, theme_default{{/str}}</div>
        <div class="text-xl font-semibold text-red-600">{{summary.errors}}</div>
      </div>
      <div class="bg-slate-50 rounded p-3">
        <div class="text-xs uppercase tracking-wide text-slate-500">{{#str}}upgrade_skipped_label, theme_default{{/str}}</div>
        <div class="text-xl font-semibold text-slate-600">{{summary.skipped}}</div>
      </div>
      <div class="bg-slate-50 rounded p-3">
        <div class="text-xs uppercase tracking-wide text-slate-500">{{#str}}upgrade_total_items_label, theme_default{{/str}}</div>
        <div class="text-xl font-semibold text-indigo-600">{{summary.total}}</div>
      </div>
    </div>
  </div>

  <div class="bg-white rounded shadow overflow-hidden">
    <table class="min-w-full text-sm">
      <thead class="bg-slate-100 text-slate-600 text-xs uppercase">
        <tr>
          <th class="px-3 py-2 text-left">{{#str}}upgrade_component_label, theme_default{{/str}}</th>
            <th class="px-3 py-2 text-left">{{#str}}upgrade_type_label, theme_default{{/str}}</th>
          <th class="px-3 py-2 text-left">{{#str}}upgrade_from_to_label, theme_default{{/str}}</th>
          <th class="px-3 py-2 text-left">{{#str}}upgrade_status_label, theme_default{{/str}}</th>
          <th class="px-3 py-2 text-left">{{#str}}upgrade_message_label, theme_default{{/str}}</th>
        </tr>
      </thead>
      <tbody>
        {{#rows}}
        <tr class="border-t">
          <td class="px-3 py-2 font-medium text-slate-800">{{component}}</td>
          <td class="px-3 py-2 text-slate-500">{{type}}</td>
          <td class="px-3 py-2 text-slate-700">{{#from_version}}{{from_version}}{{/from_version}}{{^from_version}}—{{/from_version}} → {{#to_version}}{{to_version}}{{/to_version}}{{^to_version}}—{{/to_version}}</td>
          <td class="px-3 py-2"><span class="inline-block text-xs px-2 py-1 rounded {{status_class}}">{{status}}</span></td>
          <td class="px-3 py-2 text-slate-600">{{message}}</td>
        </tr>
        {{/rows}}
        {{^rows}}
        <tr><td colspan="5" class="px-3 py-6 text-center text-slate-500">{{#str}}upgrade_none_performed, theme_default{{/str}}</td></tr>
        {{/rows}}
      </tbody>
    </table>
  </div>
  <div class="text-xs text-slate-500">{{#str}}upgrade_page_autogenerated, theme_default{{/str}}</div>
</div>
