{{! Wrapper identical to header.mustache for component-based lookup }}
<!DOCTYPE html>
<html lang="en" class="h-full bg-gray-50">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="{{meta_description}}" />
    <meta name="csrf-token" content="{{csrf_token}}" />
    <title>{{#page_title}}{{page_title}} Â· {{/page_title}}{{#str}}admin_console_title, theme_default{{/str}}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = Object.assign({},{
            theme: { extend: { colors: { brand: { 50: '#f5f9ff',100:'#e0efff',500:'#1d4ed8',600:'#1e40af' } } } }
        });
    </script>
    <style>
        .app-shell-gradient { background: linear-gradient(135deg,#1e3a8a,#1d4ed8,#2563eb); }
        .focus-ring:focus { outline: 2px solid #2563eb; outline-offset: 2px; }
        [x-cloak] { display: none !important; }
    </style>
    {{#extra_head}} {{{extra_head}}} {{/extra_head}}
</head>
<body class="h-full min-h-screen flex flex-col text-slate-800 antialiased" x-data="{ drawerOpen: true }">
    {{> icons}}
    {{> navigation}}
    <div class="flex flex-1 w-full gap-0 md:gap-6 px-0 md:px-6 lg:px-8 py-0 md:py-6 relative" aria-label="{{#str}}primary_navigation_wrapper, theme_default{{/str}}">
        {{#is_authenticated}}
        {{> left_drawer}}
        {{/is_authenticated}}
        <main id="app-main" class="flex-1 px-4 sm:px-6 lg:px-4 py-6">
