<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold">{{#str}}test_email_title, theme_default{{/str}}</h1>
  <a href="{{home_link}}" class="text-sm text-blue-600 hover:underline">{{#str}}back_admin_home, theme_default{{/str}}</a>
</div>

{{#has_messages}}
  <div class="space-y-2 mb-6">
    {{#messages}}
      <div class="p-3 rounded text-sm {{class}}">{{text}}</div>
    {{/messages}}
  </div>
{{/has_messages}}

<p class="text-sm text-slate-600 mb-5">{{#str}}test_email_intro, theme_default{{/str}}</p>

<form method="post" class="space-y-5 bg-white p-6 rounded border border-slate-200 shadow-sm">
  <input type="hidden" name="csrf_token" value="{{csrf_token}}" />
  <div class="grid gap-4 md:grid-cols-2">
    <div class="md:col-span-1">
      <label class="block text-xs font-semibold uppercase tracking-wide text-slate-600 mb-1">{{#str}}test_email_to_label, theme_default{{/str}}</label>
      <input type="email" class="w-full border rounded px-3 py-2 text-sm focus:outline-none focus:ring focus:border-indigo-400" name="to" value="{{to}}" required />
    </div>
    <div class="md:col-span-1">
      <label class="block text-xs font-semibold uppercase tracking-wide text-slate-600 mb-1">{{#str}}test_email_subject_label, theme_default{{/str}}</label>
      <input type="text" class="w-full border rounded px-3 py-2 text-sm focus:outline-none focus:ring focus:border-indigo-400" name="subject" value="{{subject}}" required />
    </div>
  </div>
  <div>
    <label class="block text-xs font-semibold uppercase tracking-wide text-slate-600 mb-2">{{#str}}test_email_body_label, theme_default{{/str}}</label>
    <textarea name="body" rows="8" class="w-full border rounded px-3 py-2 text-sm font-mono focus:outline-none focus:ring focus:border-indigo-400">{{body}}</textarea>
  </div>
  <div class="flex flex-wrap items-center gap-6">
    <div>
      <span class="block text-xs font-semibold uppercase tracking-wide text-slate-600 mb-1">{{#str}}test_email_format_label, theme_default{{/str}}</span>
      <label class="inline-flex items-center mr-4 text-sm">
        <input type="radio" name="format" value="text" {{#is_text}}checked{{/is_text}} class="mr-1"> {{#str}}test_email_format_text, theme_default{{/str}}
      </label>
      <label class="inline-flex items-center text-sm">
        <input type="radio" name="format" value="html" {{#is_html}}checked{{/is_html}} class="mr-1"> {{#str}}test_email_format_html, theme_default{{/str}}
      </label>
    </div>
    <div>
      <label class="inline-flex items-center text-sm">
        <input type="checkbox" name="attach" value="1" {{#attach_checked}}checked{{/attach_checked}} class="mr-1"> {{#str}}test_email_attach_sample_label, theme_default{{/str}}
      </label>
    </div>
  </div>
  <div>
    <button type="submit" class="px-5 py-2 rounded bg-indigo-600 text-white text-sm font-medium hover:bg-indigo-500 focus:outline-none focus:ring">
      {{#str}}test_email_send_button, theme_default{{/str}}
    </button>
  </div>
  <p class="text-xs text-slate-400 mt-4">Driver: <code>{{#driver}}{{driver}}{{/driver}}</code></p>
</form>

