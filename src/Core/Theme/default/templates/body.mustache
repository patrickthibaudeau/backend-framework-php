{{> header}}

{{! Main content area injected by caller }}
<div class="space-y-6" id="page-content">
    {{#page_heading}}
    <div>
        <h1 class="text-2xl font-semibold text-slate-800 tracking-tight">{{page_heading}}</h1>
        {{#page_subheading}}<p class="mt-1 text-slate-500 text-sm">{{page_subheading}}</p>{{/page_subheading}}
    </div>
    {{/page_heading}}

    {{#alerts}}
    <div class="rounded-md border-l-4 p-4 {{class}}">
        <div class="flex">
            <div class="ml-3">
                <p class="text-sm font-medium">{{message}}</p>
            </div>
        </div>
    </div>
    {{/alerts}}

    {{{body_html}}}
</div>

{{> footer}}

