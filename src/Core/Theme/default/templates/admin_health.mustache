<div class="max-w-7xl mx-auto px-4 py-6">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-semibold text-slate-800">{{page_title}}</h1>
    <div class="space-x-3 text-sm">
      <a href="{{home_link}}" class="text-blue-600 hover:underline">Admin Home</a>
      {{^show_phpinfo}}
        <a href="?phpinfo=1" class="text-indigo-600 hover:underline">Show PHP Info</a>
      {{/show_phpinfo}}
      {{#show_phpinfo}}
        <a href="?" class="text-indigo-600 hover:underline">Hide PHP Info</a>
      {{/show_phpinfo}}
    </div>
  </div>

  <div class="mb-6 p-4 rounded {{status_class}}">
    <div class="flex items-center justify-between">
      <div>
        <p class="font-medium">Overall Status: <span class="uppercase">{{status}}</span></p>
        <p class="text-xs mt-1 text-slate-600">Generated at {{generated_at}}</p>
      </div>
      <div class="text-sm text-slate-600">Extensions: {{ext_count}}</div>
    </div>
  </div>

  {{#has_error}}
  <div class="mb-6 p-4 border border-rose-300 bg-rose-50 text-rose-700 text-sm rounded">
    <strong>Error:</strong> {{error_message}}
  </div>
  {{/has_error}}

  <div class="grid gap-6 md:grid-cols-2">
    <div>
      <h2 class="font-semibold text-slate-700 mb-2">Services</h2>
      {{#has_services}}
      <ul class="text-sm space-y-1">
        {{#services}}
          <li class="flex justify-between"><span>{{name}}</span><span class="{{class}} font-mono">{{value}}</span></li>
        {{/services}}
      </ul>
      {{/has_services}}
      {{^has_services}}
        <p class="text-sm text-slate-500">No service data.</p>
      {{/has_services}}
    </div>

    <div>
      <h2 class="font-semibold text-slate-700 mb-2">Loaded PHP Extensions</h2>
      {{#has_extensions}}
      <div class="border rounded p-2 h-64 overflow-auto bg-white text-xs">
        <ul class="columns-2 md:columns-3">
          {{#extensions}}<li class="break-inside-avoid">{{name}}</li>{{/extensions}}
        </ul>
      </div>
      {{/has_extensions}}
      {{^has_extensions}}
        <p class="text-sm text-slate-500">No extensions listed.</p>
      {{/has_extensions}}
    </div>
  </div>

  {{#show_phpinfo}}
  <div class="mt-10">
    <h2 class="font-semibold text-slate-700 mb-3">PHP Info (Scoped)</h2>
    <div id="phpinfo" class="border rounded bg-white p-4 text-xs overflow-x-auto leading-relaxed">
      {{{phpinfo_html}}}
    </div>
  </div>
  {{/show_phpinfo}}
</div>

