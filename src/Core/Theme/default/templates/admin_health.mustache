<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold">{{#str}}system_health_title, theme_default{{/str}}</h1>
  <div class="flex items-center gap-2">
    <button type="button" onclick="window.location.reload()" class="text-sm px-3 py-1.5 rounded border border-slate-300 hover:bg-slate-50 text-slate-700">{{#str}}refresh_button, theme_default{{/str}}</button>
    <a href="{{home_link}}" class="text-sm text-blue-600 hover:underline">{{#str}}back_admin_home, theme_default{{/str}}</a>
  </div>
</div>

<div class="grid gap-6 md:grid-cols-3">
  <div class="md:col-span-1 space-y-6">
    <div class="p-4 rounded {{status_class}}">
      <div class="text-sm font-semibold mb-1">{{#str}}overall_status_heading, theme_default{{/str}}</div>
      <div class="text-lg font-bold capitalize">{{status}}</div>
      <div class="text-xs mt-2 opacity-80">Generated: {{generated_at}}</div>
      {{#has_error}}
      <div class="mt-3 text-xs bg-red-50 text-red-700 border border-red-200 rounded p-2">
        <strong>Error:</strong> {{error_message}}
      </div>
      {{/has_error}}
    </div>
    <div class="p-4 rounded bg-white border border-slate-200 shadow-sm">
      <div class="flex items-center justify-between mb-2">
        <h2 class="text-sm font-semibold">{{#str}}services_heading, theme_default{{/str}}</h2>
      </div>
      {{#has_services}}
      <ul class="space-y-1 text-sm">
        {{#services}}
        <li class="flex items-center justify-between">
          <span class="font-medium">{{name}}</span>
          <span class="text-xs uppercase tracking-wide {{class}}">{{value}}</span>
        </li>
        {{/services}}
      </ul>
      {{/has_services}}
      {{^has_services}}
      <p class="text-xs text-slate-500">(none reported)</p>
      {{/has_services}}
    </div>
  </div>

  <div class="md:col-span-2 p-4 rounded bg-white border border-slate-200 shadow-sm">
    <div class="flex items-center justify-between mb-3">
      <h2 class="text-sm font-semibold">{{#str}}php_extensions_heading, theme_default{{/str}} ({{ext_count}})</h2>
      <button type="button" onclick="document.getElementById('extList').classList.toggle('line-clamp-none')" class="text-xs text-indigo-600 hover:underline">Toggle Wrap</button>
    </div>
    {{#has_extensions}}
    <div id="extList" class="text-xs leading-relaxed line-clamp-none break-words">
      {{#extensions}}
        <span class="inline-block bg-slate-100 text-slate-700 px-2 py-1 rounded m-0.5">{{name}}</span>
      {{/extensions}}
    </div>
    {{/has_extensions}}
    {{^has_extensions}}
    <p class="text-xs text-slate-500">No extensions listed.</p>
    {{/has_extensions}}
  </div>
</div>

